<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:orientation="vertical" android:layout_width="match_parent"
     android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/dark_red"
        android:layout_weight="3">
<ImageView
    android:layout_width="0dp"
    android:src="@drawable/back_icon"
    android:layout_height="wrap_content"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_marginLeft="4dp"
    android:layout_weight="2"
    android:id="@+id/imgBack" />
        <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Activate Account"
            android:textColor="#fff"
            android:gravity="center"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:layout_weight="6"/>
        <ImageView
            android:layout_width="0dp"
            android:src="@drawable/cancel_icon"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1.6"
            android:id="@+id/imgCancel" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="4">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/email_bar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"

            android:layout_height="40dp">
            <EditText
                android:id="@+id/edUserName"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/user_name"
                android:paddingLeft="15dp"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="4">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@drawable/email_bar"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"

            android:layout_height="40dp">
            <EditText
                android:id="@+id/edCode"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                android:hint="@string/activate_code"
                android:paddingLeft="15dp"
                android:layout_height="match_parent" />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"

        android:layout_weight="2.8">



        <Button
            android:id="@+id/btnActivateCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/send_activate_code"
            android:textColor="#fff"
            android:textSize="16sp"
            android:background="@drawable/forget_password_bar"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="20">





    </LinearLayout>
</LinearLayout>