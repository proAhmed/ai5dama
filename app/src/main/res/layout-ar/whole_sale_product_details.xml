<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"  >

                <RelativeLayout
                    android:id="@+id/relative"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <ImageView
                        android:id="@+id/thumbnail"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_alignParentTop="true"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v4.view.ViewPager
                android:id="@+id/pager"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                >
            </android.support.v4.view.ViewPager>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_weight="2.5">
                <View
                    android:layout_width="match_parent"

                    android:background="@color/cardview_dark_background"
                    android:layout_height="1dp"/>
                <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                    android:id="@+id/tvProductName"
                    android:layout_width="match_parent"
                    android:layout_marginTop="6dp"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                     android:layout_height="wrap_content" />

                <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                    android:id="@+id/tvCategory"
                    android:layout_marginTop="6dp"
                    android:textColor="#000"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                    android:id="@+id/tvCode"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:textColor="#000"
                    android:text=""
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="match_parent"
                    android:layout_marginTop="2dp"
                    android:background="@color/cardview_dark_background"
                    android:layout_height="1dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_weight="2.5"
                android:layout_height="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="2">
                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp"
                        android:text="Quantity"
                        android:layout_weight="2"/>

                    <ImageView
                        android:id="@+id/imgDec"
                        android:layout_width="0dp"
                        android:src="@drawable/decrease"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"/>


                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>
                    <RelativeLayout
                        android:id="@+id/reShopQuantity"
                        android:layout_width="0dp"
                        android:background="@drawable/quantity_bar"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_margin="4dp"
                        android:layout_weight="3">
                        <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                            android:id="@+id/tvQuantity"
                            android:layout_width="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="#fff"
                            android:text="1"
                            android:layout_height="match_parent"/>
                    </RelativeLayout>
                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <ImageView
                        android:id="@+id/imgInc"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/increase"
                        android:layout_weight="0.4"/>

                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="2">
                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"/>
                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:text="Price"
                        android:layout_width="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.2"/>


                    <RelativeLayout

                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/quantity_bar"
                        android:layout_margin="4dp"
                        android:layout_weight="3">
                        <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                            android:id="@+id/tvPrice"
                            android:layout_centerInParent="true"
                            android:textColor="#fff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </RelativeLayout>
                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:orientation="horizontal"
                    android:layout_weight="2">
                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8"/>


                    <Button
                        android:id="@+id/btnBuyNow"

                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:background="@drawable/buy_now_bar"
                        android:layout_margin="4dp"
                        android:text="buy now"
                        android:textColor="#fff"
                        android:layout_weight="3"/>

                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/add_cart"
                        android:layout_weight="1"
                        android:id="@+id/imgCart" />

                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.15"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/favorite_icon"
                        android:layout_weight="1"
                        android:id="@+id/imgFavorite" />
                    <aykhadma.droidahmed.com.aykhaama.controller.MyTextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.5"/>
                </LinearLayout>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/reWholeSaleRelatedProduct"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:cacheColorHint="@android:color/transparent"
                />
        </LinearLayout>
    </ScrollView>
</LinearLayout>